
    <div>
      <label>
        Gap:
        <nz-input-number [nzMin]="0" [nzMax]="16" [nzStep]="1" [(ngModel)]="gap"></nz-input-number>
      </label>
      <button nz-button (click)="change()">
        <span>Change Text</span>
      </button>
    </div>

    <nz-avatar
      [nzGap]="gap"
      [ngStyle]="{ 'background-color': color }"
      [nzText]="text"
      nzSize="large"
      style="vertical-align: middle;"
    ></nz-avatar>
  