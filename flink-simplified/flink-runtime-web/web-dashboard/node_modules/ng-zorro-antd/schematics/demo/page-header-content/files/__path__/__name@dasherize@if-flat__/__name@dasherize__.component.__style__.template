
      .content {
        flex: 1;
      }

      .content p {
        margin-bottom: 1em;
      }

      .content-link a {
        margin-right: 16px;
      }

      .content-link a img {
        margin-right: 8px;
      }

      .content-image {
        margin: 0 0 0 60px;
        display: flex;
        align-items: center;
      }

      .content-image img {
        width: 100%;
      }

      @media (max-width: 768px) {
        .content-image {
          flex: 100%;
          margin: 24px 0 0;
        }
      }
    